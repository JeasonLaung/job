/* components/m-panel/m-panel.wxss */
.m-panel{
  margin-bottom:20rpx;
  font-size: 37rpx;
  background-color: #fff;
  color: #333;
}
.m-panel__inner{
  margin-left: 27rpx;
  padding-right: 27rpx;
  margin-top: 27rpx;
}
.m-panel__header_title::before{
  width: 8rpx;
  height: 45rpx;
  content: "";
  background-color: #2d8cf0;
  position: absolute;
  left: 0;
  top:0;
  bottom: 0;
  margin: auto 0;
}
.m-panel__header{
  padding: 30rpx 30rpx;
  border-bottom: 1rpx solid #f2f2f2;
  display: flex;
  justify-content:space-between;
  align-item: center;
}
.m-panel__header_more{
}
.m-panel__header_title{
  font-weight: bold;
  padding-left: 25rpx;
  position: relative;
}
.m-note{
  font-size: 20rpx;
  color: #aaa;
  margin: 20rpx 27rpx 0;
}

